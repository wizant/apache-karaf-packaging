# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

build_version=${KARAF_VERSION}

%:
	dh $@

override_dh_auto_build:
	# No easy way to disable the default RAT run which fails the build because of some fails in the debian/ directory
	rm -rf bigtop-empty
	mkdir -p bigtop-empty


override_dh_auto_install:
	sh -x debian/install_karaf.sh \
	  --build-dir=$${PWD} \
	  --prefix=debian/apache-karaf
#	tar -C ${PWD}/debian/apache-karaf --strip-components=1 -xzf \
#${PWD}/src/assemblies/apache-karaf/target/apache-karaf-2.3.0-minimal.tar.gz
#	tar -C ${PWD}/debian/apache-karaf --strip-components=1 -xzf \
#${PWD}/src/assemblies/apache-karaf/target/apache-karaf-2.3.0.tar.gz
